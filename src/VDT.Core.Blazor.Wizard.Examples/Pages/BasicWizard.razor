@page "/BasicWizard"

<h1>Basic wizard</h1>

<p>
    At its core, the wizard is a control that allows you to guide your users through a series of sequential steps.
    <a class="link-primary" @onclick="async () => await Wizard!.Start()">Start the example wizard.</a>
</p>

<div class="card">
    <Wizard @ref="Wizard"
            ContainerClass="card-body"
            TitleContainerClass="card-title mb-3"
            StepTitleContainerClass="mb-3 d-flex"
            StepTitleClass="me-3"
            ActiveStepTitleClass="fw-bold"
            AllowCancel="true"
            AllowPrevious="true"
            ButtonContainerClass="mb-3 btn-group align-content-end"
            ButtonClass="btn"
            ButtonCancelClass="btn-secondary"
            ButtonCancelText="Stop"
            ButtonPreviousClass="btn-secondary"
            ButtonPreviousText="<< Prev"
            ButtonFinishClass="btn-primary"
            ButtonFinishText="Complete"
            ButtonNextClass="btn-primary"
            ButtonNextText="Next >>">
        <TitleContent>
            <h2>Wizard title</h2>
        </TitleContent>
        <Steps>
            <WizardStep Title="Introduction">
                <p>
                    This is a wizard. Please click next to continue.
                </p>
            </WizardStep>
            <WizardStep Title="Information required">
                <p>
                    Please fill out the form below.
                </p>
            </WizardStep>
            <WizardStep Title="Summary">
                <p>
                    See below for a summary of the supplied information.
                </p>
            </WizardStep>
        </Steps>
    </Wizard>
</div>

@code {
    public Wizard? Wizard { get; set; }
}
